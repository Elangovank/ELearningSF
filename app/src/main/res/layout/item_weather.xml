<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"

    android:layout_height="110dp"
    android:layout_margin="@dimen/margin_large"
    android:orientation="vertical">

    <TextView
        android:id="@+id/celciusTextView"
        style="@style/Base_Wrap"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_upper_medium"
        android:layout_gravity="center"
        android:fontFamily="@font/worksans_regular"
        android:text="28`C"
        android:textColor="@color/day_range"
        android:textSize="@dimen/font_size_small" />


    <ImageView
        android:id="@+id/weatherImageView"
      android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/cloudy_small"
        android:layout_height="45dp" />

    <TextView
        android:id="@+id/timeTextView"
        android:layout_gravity="center"
        style="@style/Base_Wrap"
        android:layout_height="wrap_content"
        android:fontFamily="@font/worksans_regular"
        android:text="Now"
        android:textSize="@dimen/font_size_very_small" />


</LinearLayout>