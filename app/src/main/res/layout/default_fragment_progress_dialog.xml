<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/Base_Match"
        android:background="@android:color/transparent">
   <LinearLayout
       android:layout_centerInParent="true"
       android:id="@+id/contentLayout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="center_vertical"
       android:layout_margin="@dimen/margin_medium"
       android:background="@color/white"
       android:orientation="horizontal">
       <ImageView
           android:id="@+id/loadingImageView"
           android:layout_width="@dimen/loading_progress_image_size"
           android:layout_height="@dimen/loading_progress_image_size"
           android:scaleType="fitXY"
           android:layout_gravity="center" />
       <TextView
           android:id="@+id/loadingTextView"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingStart="@dimen/padding_large"
           android:layout_gravity="center_vertical"
           android:textSize="@dimen/font_size_large"
           android:fontFamily="@font/opensans_regular"
           android:textColor="@color/text_gray_light_shade1"
           />
   </LinearLayout>

    <ImageView
        android:id="@+id/loadingImageView1"
        android:layout_width="@dimen/loading_progress_image_size"
        android:layout_height="@dimen/loading_progress_image_size"
        android:scaleType="fitXY"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>
