<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Base_Match_Wrap"
    android:layout_margin="@dimen/margin_medium"
    app:cardCornerRadius="@dimen/margin_small">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/clickButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.0"/>

    <LinearLayout
        style="@style/Base_Match_Wrap"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/Base_Match_Wrap"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/daysTextView"
                        style="@style/Base_Wrap"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:drawableStart="@drawable/ic_day"
                        android:drawablePadding="@dimen/margin_medium"
                        android:fontFamily="@font/worksans_bold"
                        android:textAllCaps="false"
                        android:textColor="@color/text_gray_light_shade1"
                        android:textSize="@dimen/font_size_medium" />


                    <TextView
                        android:id="@+id/history_status"
                        style="@style/Base_Wrap"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_marginBottom="@dimen/margin_medium"
                        android:background="@drawable/background_completed"
                        android:drawablePadding="@dimen/margin_medium"
                        android:fontFamily="@font/worksans_regular"
                        android:maxLines="1"
                        android:paddingStart="@dimen/margin_medium"
                        android:paddingTop="@dimen/margin_small"
                        android:paddingEnd="@dimen/margin_medium"
                        android:paddingBottom="@dimen/margin_small"
                        android:textColor="@color/text_gray_light_shade1"
                        android:textSize="@dimen/font_size_very_small" />


                    <TextView
                        android:id="@+id/offline"
                        style="@style/Base_Wrap"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_marginBottom="@dimen/margin_medium"
                        android:fontFamily="@font/worksans_regular"
                        android:maxLines="1"
                        android:drawablePadding="@dimen/margin_medium"
                         android:drawableStart="@drawable/ic_offline"
                        android:textColor="@color/text_color_offline"
                        android:textSize="@dimen/font_size_very_small" />


                    <TextView
                        android:id="@+id/activityType"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/worksans_regular"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/daysTextView"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/font_size_very_small"
                        tools:text="dfdgdg" />
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/title"
                    style="@style/Base_Match_Wrap"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:background="@color/transperent"
                    android:drawablePadding="@dimen/padding_upper_medium"
                    android:fontFamily="@font/worksans_regular"
                    android:text="Feeding chicks"
                    android:textColor="@color/text_gray_light_shade1"
                    android:textSize="@dimen/font_size_small" />


            </LinearLayout>


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mediaRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/media_recycle_height"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_large" />

    </LinearLayout>

    </FrameLayout>
</androidx.cardview.widget.CardView>