<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Base_Match_Wrap"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/maincard"
        style="@style/Base_Match_Wrap"
        android:layout_margin="@dimen/margin_ultra_small"

        app:cardCornerRadius="@dimen/padding_small"
        app:cardUseCompatPadding="true">

        <LinearLayout
            style="@style/Base_Match_Wrap"
            android:layout_height="68dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_medium"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_gravity="center_vertical"
                app:cardCornerRadius="@dimen/padding_small"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/imageView"
                    style="@style/Base_Match"
                    android:scaleType="centerCrop"
                    android:src="@drawable/splash_bg" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                style="@style/Base_Match_Wrap"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="@dimen/padding_upper_medium">

                <LinearLayout
                    style="@style/Base_Match_Wrap"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/titleView"
                        style="@style/Base_Match_Wrap"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:ellipsize="end"

                        android:fontFamily="@font/worksans_regular"
                        android:maxLines="1"
                        android:textColor="@color/text_green"
                        android:textSize="@dimen/font_size_small"
                        tools:text="Bacitracin" />

                    <TextView
                        android:id="@+id/dateView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/worksans_light"
                        android:maxLines="1"
                        android:paddingStart="@dimen/padding_upper_medium"
                        android:textColor="@color/text_green"
                        android:textSize="@dimen/font_size_ultra_small"
                        tools:text="14th Apr 2018" />

                </LinearLayout>

                <TextView
                    android:id="@+id/descriptionView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/margin_small"
                    android:ellipsize="end"
                    android:fontFamily="@font/worksans_regular"
                    android:lines="3"
                    android:textSize="@dimen/font_size_ultra_small"
                    tools:text="Lorem ipsum dolor sit amet, consetetur pscingelitr, sed diam nonumy Lorem ipsum dolor sit amet, consetetur pscingelitr, sed diam nonumy Lorem ipsum dolor sit amet " />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
