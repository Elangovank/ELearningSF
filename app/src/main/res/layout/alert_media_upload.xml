<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_large"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/media_alert_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/uploadDialogTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_large"
            android:textSize="@dimen/font_size_medium" />

        <ImageView
            android:id="@+id/closeImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/margin_small"
            android:padding="@dimen/padding_medium"
            android:src="@drawable/ic_close_small" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/galleryLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gallery_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginEnd="@dimen/margin_large"
                android:src="@drawable/ic_unchecked" />

            <ImageView
                android:id="@+id/galleryImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_gallery_placeholder" />

            <TextView
                android:id="@+id/galleryTitleTextView"
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_upper_medium"
                android:textSize="@dimen/font_size_medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/selectionLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/select_video"
                android:layout_width="match_parent"
                android:layout_height="@dimen/media_view_height"
                android:layout_marginLeft="@dimen/margin_x_large"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_x_large"
                android:background="@drawable/media_selector_view_background"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/media_image_size"
                    android:layout_height="@dimen/media_image_size"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_video" />

                <TextView
                    android:id="@+id/videoDialogTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_upper_medium"
                    android:textSize="@dimen/font_size_medium" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/select_audio"
                android:layout_width="match_parent"
                android:layout_height="@dimen/media_view_height"
                android:layout_marginLeft="@dimen/margin_x_large"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_x_large"
                android:background="@drawable/media_selector_view_background"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/media_image_size"
                    android:layout_height="@dimen/media_image_size"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_mic" />

                <TextView
                    android:id="@+id/audioDialogTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_upper_medium"
                    android:textSize="@dimen/font_size_medium" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/select_photo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/media_view_height"
                android:layout_marginLeft="@dimen/margin_x_large"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_x_large"
                android:background="@drawable/media_selector_view_background"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/media_image_size"
                    android:layout_height="@dimen/media_image_size"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_photo" />

                <TextView
                    android:id="@+id/imageDialogTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_upper_medium"
                    android:textSize="@dimen/font_size_medium" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/margin_upper_medium"
        android:layout_marginTop="@dimen/margin_upper_medium"
        android:layout_marginRight="@dimen/margin_upper_medium"
        android:background="@color/text_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/mediaLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_upper_medium"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/media_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginEnd="@dimen/margin_large"
                android:src="@drawable/ic_unchecked" />

            <ImageView
                android:id="@+id/mediaImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_video" />

            <TextView
                android:id="@+id/mediaTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_upper_medium"
                android:textSize="@dimen/font_size_medium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mediaCaptureLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/media_record_video"
                android:layout_width="match_parent"
                android:layout_height="@dimen/media_view_height"
                android:layout_marginLeft="@dimen/margin_x_large"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_x_large"
                android:background="@drawable/media_selector_view_background"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/media_image_size"
                    android:layout_height="@dimen/media_image_size"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_video" />

                <TextView
                    android:id="@+id/recordTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_upper_medium"
                    android:textSize="@dimen/font_size_medium" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/media_record_audio"
                android:layout_width="match_parent"
                android:layout_height="@dimen/media_view_height"
                android:layout_marginLeft="@dimen/margin_x_large"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_x_large"
                android:background="@drawable/media_selector_view_background"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/media_image_size"
                    android:layout_height="@dimen/media_image_size"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_mic" />

                <TextView
                    android:id="@+id/recordAudioTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_upper_medium"
                    android:textSize="@dimen/font_size_medium" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/media_photo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/media_view_height"
                android:layout_marginLeft="@dimen/margin_x_large"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_x_large"
                android:background="@drawable/media_selector_view_background"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/media_image_size"
                    android:layout_height="@dimen/media_image_size"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_photo" />

                <TextView
                    android:id="@+id/captureTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_upper_medium"

                    android:textSize="@dimen/font_size_medium" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
