<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/default_activity_layout"
        style="@style/Base_Match_Wrap"
        android:background="@color/app_bg"
        android:orientation="vertical"
    >

        <LinearLayout
            style="@style/Base_Match_Wrap"
            android:background="@color/view_color_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/subTitle"
                style="@style/Base_Match_Wrap"
                android:layout_marginStart="@dimen/margin_medium"
                android:fontFamily="@font/worksans_semibold"
                android:maxLines="1"
                android:paddingTop="@dimen/margin_medium"
                android:paddingBottom="@dimen/margin_medium"
                android:textAllCaps="true"
                android:textColor="@color/button_text_color"
                android:textSize="@dimen/font_size_small" />

        </LinearLayout>



        <TextView
            android:id="@+id/question"
            style="@style/Base_Match_Wrap"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium"
            android:fontFamily="@font/worksans_regular"
            android:textAlignment="gravity"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/font_size_small"
            tools:text="Select the age of the check" />

        <LinearLayout
            android:id="@+id/rangeLayout"
            style="@style/Base_Match_Wrap"
            android:layout_marginStart="@dimen/margin_medium"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/rangeText"
                style="@style/Base_Match_Wrap"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:fontFamily="@font/worksans_medium"

                android:textSize="@dimen/font_size_medium" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/radioRecycleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/radioRecyclerView"
                style="@style/Base_Match_Wrap"
                android:orientation="vertical"
                android:visibility="gone" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/resultLayout"
            style="@style/Base_Match"
            android:layout_margin="@dimen/margin_small"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                style="@style/Base_Match_Wrap"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium"
                android:background="@color/view_color_bg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/subTitle1"
                    style="@style/Base_Match_Wrap"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:fontFamily="@font/worksans_semibold"
                    android:maxLines="1"
                    android:paddingTop="@dimen/margin_medium"
                    android:paddingBottom="@dimen/margin_medium"
                    android:textAllCaps="true"
                    android:textColor="@color/button_text_color"
                    android:textSize="@dimen/font_size_small" />

            </LinearLayout>

            <TextView
                android:id="@+id/questions"
                style="@style/Base_Match"
                android:layout_marginStart="@dimen/margin_medium"
                android:text="question"
                android:layout_marginTop="@dimen/margin_small"
                android:fontFamily="@font/worksans_regular"
                android:textSize="@dimen/font_size_medium" />

            <TextView
                android:id="@+id/answers"
                style="@style/Base_Match"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginStart="@dimen/margin_medium"
                android:fontFamily="@font/worksans_regular"
                android:textSize="@dimen/font_size_small" />


        </LinearLayout>

        <LinearLayout
            style="@style/Base_Match_Wrap"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_color" />

            <LinearLayout
                style="@style/Base_Match_Wrap"
                android:id="@+id/recommeded"

                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginBottom="@dimen/margin_large"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    style="@style/Base_Wrap"
                    android:src="@drawable/ic_hint"

                    />

                <LinearLayout
                    style="@style/Base_Match_Wrap"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/standardTextView"
                        style="@style/Base_Match_Wrap"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/worksans_medium"
                        android:textAllCaps="true"
                        android:textColor="@color/text_standard"
                        android:textSize="@dimen/font_size_small" />

                    <WebView
                        android:id="@+id/hint"
                        style="@style/Base_Match_Wrap"
                        android:layout_width="match_parent"
                        android:layout_marginStart="@dimen/margin_small"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:fontFamily="@font/worksans_medium"
                        android:textSize="@dimen/font_size_very_small" />
                </LinearLayout>
            </LinearLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_color"

                />
        </LinearLayout>


        <TextView
            android:id="@+id/or"
            style="@style/Base_Match_Wrap"
            android:layout_marginStart="@dimen/margin_medium"
            android:fontFamily="@font/worksans_medium"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="@dimen/margin_medium"
            android:textAlignment="gravity"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/font_size_medium"
            android:visibility="gone" />

        <TextView

            android:id="@+id/alternate"
            style="@style/Base_Match_Wrap"
            android:layout_marginStart="@dimen/margin_medium"
            android:fontFamily="@font/worksans_medium"
            android:gravity="left"
            android:maxLines="1"
            android:paddingBottom="@dimen/margin_medium"
            android:textAlignment="gravity"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/font_size_medium"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/completedResult"
        style="@style/Base_Match_Wrap"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/completedQuestion"
            style="@style/Base_Match_Wrap"
            android:layout_marginStart="@dimen/margin_medium"
            android:fontFamily="@font/worksans_medium"
            android:maxLines="1"
            android:paddingBottom="@dimen/margin_medium"
            android:textAlignment="gravity"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/font_size_medium"
            android:visibility="gone" />

        <TextView
            android:id="@+id/answer"
            style="@style/Base_Match_Wrap"
            android:layout_marginStart="@dimen/margin_medium"
            android:fontFamily="@font/worksans_medium"
            android:maxLines="1"
            android:paddingBottom="@dimen/margin_medium"
            android:textAlignment="gravity"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/font_size_medium"
            android:visibility="gone" />
    </LinearLayout>





</LinearLayout>