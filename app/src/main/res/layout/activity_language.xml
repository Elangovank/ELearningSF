<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/topLevelLayouts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chooseLanguage"
                style="@style/Base_Wrap"
                android:layout_margin="@dimen/margin_x_large"
                android:fontFamily="@font/opensans_semibold"
                android:layout_marginBottom="@dimen/margin_large"
                android:text="@string/chaoose_your_language"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/font_size_medium" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                style="@style/Base_Match_Wrap"
                android:layout_margin="@dimen/margin_x_large" />

            <TextView
                android:id="@+id/languageSubmit"
                style="@style/Base_Match_Wrap"
                android:layout_margin="@dimen/margin_xx_large"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:padding="@dimen/margin_large"
                android:text="@string/submit"
                android:fontFamily="@font/worksans_semibold"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_small" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>