<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="@dimen/margin_medium"
    android:orientation="vertical"
    app:cardCornerRadius="5dp">

    <LinearLayout

        style="@style/Base_Match_Wrap"
        android:layout_margin="@dimen/margin_medium"
        android:orientation="vertical">

        <TextView
            android:id="@+id/arrivedDateTextView"
            style="@style/Base_Wrap"
            android:layout_width="wrap_content"
            android:drawableStart="@drawable/ic_calendargreen"
            android:drawablePadding="@dimen/margin_medium"
            android:textColor="@color/date_color"
            tools:text="7 Mar,2020" />

        <LinearLayout
            style="@style/Base_Wrap"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/chickLayout"
                style="@style/Base_Wrap"

                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_large"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/chickTextView"
                    style="@style/Base_Wrap"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/worksans_regular"
                    android:textColor="@color/gray_shade1"
                    android:textSize="@dimen/font_size_very_small" />

                <TextView
                    android:id="@+id/chickQty"
                    style="@style/Base_Wrap"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:fontFamily="@font/worksans_regular"

                    android:textColor="@color/day_range"
                    android:textSize="@dimen/font_size_small"
                    android:text="Nom 12" />
            </LinearLayout>



<!--            <LinearLayout
                android:id="@+id/chickLayout"
                style="@style/Base_Wrap"

                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_large"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/chickTextView"
                    style="@style/Base_Wrap"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/worksans_regular"
                    android:text="@string/Chicks"
                    android:textColor="@color/gray_shade1"
                    android:textSize="@dimen/font_size_very_small" />

                <TextView
                    android:id="@+id/chickQty"
                    style="@style/Base_Wrap"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/margin_small"
                    android:fontFamily="@font/worksans_regular"
                    android:textColor="@color/day_range"
                    android:textSize="@dimen/font_size_small"
                    android:text="Nom 12" />


            </LinearLayout>-->


            <LinearLayout
                android:id="@+id/feedLayout"
                style="@style/Base_Wrap"
                android:orientation="vertical">

                <LinearLayout style="@style/Base_Wrap">

                    <TextView
                        android:id="@+id/feedTextView"
                        style="@style/Base_Wrap"
                        android:layout_height="21dp"
                        android:layout_marginTop="@dimen/margin_small"
                        android:fontFamily="@font/worksans_regular"
                        android:textColor="@color/gray_shade1"
                        android:textSize="@dimen/font_size_very_small" />

                    <TextView
                        android:id="@+id/itemCountTextView"
                        style="@style/Base_Wrap"
                        android:layout_marginStart="@dimen/margin_small"
                        android:layout_marginTop="@dimen/margin_small"
                        android:fontFamily="@font/worksans_regular"
                        android:textColor="@color/gray_shade2"
                        android:textSize="@dimen/font_size_ultra_small"
                        tools:text="20" />


                    <TextView
                        android:id="@+id/lableBagsTextView"
                        style="@style/Base_Wrap"
                        android:layout_marginStart="@dimen/margin_small"
                        android:layout_marginTop="@dimen/margin_small"
                        android:fontFamily="@font/worksans_regular"
                        android:textColor="@color/gray_shade2"
                        android:textSize="@dimen/font_size_ultra_small"
                    />

                </LinearLayout>

                <LinearLayout
                    style="@style/Base_Wrap"
                    >

                <TextView
                    android:id="@+id/feedQty"
                    style="@style/Base_Wrap"
                    android:layout_marginTop="@dimen/margin_small"
                    android:fontFamily="@font/worksans_regular"
                    android:textColor="@color/day_range"
                    android:textSize="@dimen/font_size_small"
                    tools:text="60 kg" />

                    <TextView
                        android:id="@+id/bagsTextView"
                        style="@style/Base_Wrap"
                        android:layout_marginTop="@dimen/margin_small"
                        android:fontFamily="@font/worksans_regular"
                        android:textColor="@color/day_range"
                        android:textSize="@dimen/font_size_small"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>