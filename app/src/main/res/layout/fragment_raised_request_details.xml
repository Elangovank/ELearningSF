<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/issueDetailLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">

    <include layout="@layout/appbar_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/subCatagoryId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_upper_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:fontFamily="@font/opensans_semibold"
                    android:gravity="center_vertical"
                    android:textColor="@color/activity_text"
                    android:textSize="@dimen/font_size_small"
                    tools:text="99" />

                <TextView
                    android:id="@+id/requestIdTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_upper_medium"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:fontFamily="@font/opensans_regular"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray_shade1"
                    android:textSize="@dimen/font_size_ultra_small" />


            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_toRightOf="@id/icone"
                android:background="@color/black_view" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/supportName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/opensans_regular"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:textAlignment="gravity"
                    android:textColor="@color/day_range"
                    android:textSize="@dimen/font_size_small"
                    tools:text="Mite control" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/subCatagoryIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_marginTop="@dimen/margin_small"
                    android:drawableStart="@drawable/ic_management_small" />


                <TextView
                    android:id="@+id/supportNameTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans_regular"
                    android:gravity="center_vertical"
                    android:textAlignment="gravity"
                    android:textColor="@color/gray_shade1"
                    android:textSize="@dimen/font_size_small"
                    tools:text="Medicine" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:fontFamily="@font/worksans_regular"
                    android:gravity="end"
                    android:textColor="@color/text_gray_light"
                    android:textSize="@dimen/font_size_small"
                    tools:text="21 May 1992" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_view" />


    <TextView
        android:id="@+id/questionRaised"
        style="@style/Base_Match_Wrap"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginEnd="@dimen/margin_medium"
        android:fontFamily="@font/worksans_medium"

        android:textColor="@color/day_range" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/questionRecyclerView"
        style="@style/Base_Match_Wrap"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/queriesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium" />

</LinearLayout>