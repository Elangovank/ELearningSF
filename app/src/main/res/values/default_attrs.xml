<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BottomBar">
        <attr name="labels" format="reference" />
        <attr name="labelColor" format="reference|color" />
        <attr name="labelIconResourceIds" format="reference" />
        <attr name="bottomBarBg" format="color|reference" />
        <attr name="actionButtonIcons" format="reference" />
        <attr name="actionButtonBg" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="CircularTextView">
        <attr name="background_color" format="color" />
        <attr name="selected_background_color" format="color" />
    </declare-styleable>

    <!-- Caution: This was mapped to GMEditText.FIELD_TYPE-->
    <attr name="fieldType" format="enum">
        <enum name="NAME" value="1" />
        <enum name="EMAIL" value="2" />
        <enum name="MOBILE" value="3" />
        <enum name="PASSWORD" value="4" />
        <enum name="PIN_CODE" value="5" />
        <enum name="VOTER_ID" value="6" />
        <enum name="QUANTITY" value="7" />
        <enum name="OTP" value="8" />
    </attr>
    <!-- Caution: This was mapped to GMEditText.PASSWORD_SCHEMA-->
    <attr name="passwordSchema" format="enum">
        <enum name="ANY" value="1" />
        <enum name="ALPHA" value="2" />
        <enum name="ALPHA_MIXED_CASE" value="3" />
        <enum name="NUMERIC" value="4" />
        <enum name="ALPHA_NUMERIC" value="5" />
        <enum name="ALPHA_NUMERIC_MIXED_CASE" value="6" />
        <enum name="ALPHA_NUMERIC_SYMBOLS" value="7" />
        <enum name="ALPHA_NUMERIC_MIXED_CASE_SYMBOLS" value="8" />
    </attr>

    <declare-styleable name="GMWidget">
        <attr name="jsonkey" format="string" />
        <attr name="fieldType" />
        <attr name="mandatoryField" format="boolean" />
        <attr name="passwordMinLength" format="reference|integer" />
        <attr name="passwordMaxLength" format="reference|integer" />
        <attr name="passwordSchema" />
    </declare-styleable>

    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="MorphBottomNavigationView">
        <attr name="backgroundTint" format="color" />
        <attr name="morphItemRadius" format="dimension" />
        <attr name="morphVerticalOffset" format="dimension" />
        <attr name="morphCornerRadius" format="dimension" />
    </declare-styleable>


    <declare-styleable name="DonutProgress">
        <attr name="donut_progress" format="integer"/>
        <attr name="donut_max" format="integer"/>
        <attr name="donut_unfinished_color" format="color"/>
        <attr name="donut_finished_color" format="color"/>
        <attr name="donut_finished_stroke_width" format="dimension"/>
        <attr name="donut_unfinished_stroke_width" format="dimension"/>
        <attr name="donut_text_size" format="dimension"/>
        <attr name="donut_text_color" format="color"/>
        <attr name="donut_text" format="string"/>
        <attr name="donut_prefix_text" format="string"/>
        <attr name="donut_suffix_text" format="string"/>
        <attr name="donut_background_color" format="color"/>
    </declare-styleable>
</resources>